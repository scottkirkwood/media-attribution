{
  "name": "Media Attribution",
  "manifest_version": 2,
  "version": "0.2",
  "description": "Download an image and make an info file for this file.",
  "permissions": [
    "tabs",
    "contextMenus",
    "http://*/*", "https://*/*"
  ],
  "background": {
    "scripts": [
      "jquery-2.0.2.min.js",
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "icon16x16.png",
    "l9": "iconl9xl9.png",
    "32": "icon32x32.png",
    "48": "icon48x48.png",
    "128": "icon128x128.png"
  },
  "options_page": "options.html"
}
